<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/animation_list"
    tools:context=".LoginActivity"
    android:id="@+id/RelativeMain1">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/app_name"
        android:textSize="60sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="#fefefe"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text_border"
            android:hint=" Enter your Email"
            android:drawableStart="@drawable/custom_username"
            android:textColor="@color/white"
            android:id="@+id/editTextEmailLogin"
            android:drawablePadding="10dp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/custom_passwordlogin"
            android:background="@drawable/custom_edit_text_border"
            android:hint=" Enter your Password"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:id="@+id/editTextPasswordLogin"
            android:drawablePadding="10dp"/>

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@null"
            android:textColor="#ffff"
            android:id="@+id/buttonUserLogin"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Don't have an account yet? Click here"
            android:id="@+id/textViewRegisterHere"/>

    </LinearLayout>

</RelativeLayout>